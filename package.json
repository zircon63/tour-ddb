{
  "name": "pizza-store",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:local1": "nest start --path tsconfig.local1.json  --debug 0.0.0.0 --watch",
    "build:local2": "nest start --path tsconfig.local2.json  --debug 0.0.0.0 --watch",
    "build:central": "nest start --path tsconfig.central.json  --debug 0.0.0.0 --watch",
    "build:all": "npm run build:local1 && npm run build:local2 && npm run build:central",
    "migration:central": "typeorm migration:run -c central",
    "migration:local1": "typeorm migration:run -c local1",
    "migration:local2": "typeorm migration:run -c local2",
    "migration:all": "run-s migration:*",
    "seed:central": "typeorm migration:run -c central-seed",
    "seed:local1": "typeorm migration:run -c local1-seed",
    "seed:local2": "typeorm migration:run -c local2-seed",
    "seed:all": "run-s seed:*",
    "docker:up": "CURRENT_UID=$(id -u):$(id -g) docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/config": "0.0.7",
    "@nestjs/core": "^6.7.2",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjsx/crud": "^4.3.3",
    "@nestjsx/crud-typeorm": "^4.3.3",
    "typeorm-naming-strategies": "^1.1.0",
    "pg": "^8.2.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.11.0",
    "compression": "^1.7.4",
    "connect-redis": "^4.0.3",
    "cookie-parser": "^1.4.4",
    "express-session": "^1.17.0",
    "faker": "^4.1.0",
    "moment": "^2.24.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "typeorm": "^0.2.22"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "@nestjs/cli": "^7.2.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@schematics/angular": "^8.3.20",
    "@types/connect-redis": "^0.0.13",
    "@types/express": "^4.17.1",
    "@types/faker": "^4.1.8",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/passport-local": "^1.0.33",
    "@types/redis": "^2.8.14",
    "@types/supertest": "^2.0.8",
    "jest": "^26.0.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "3.6.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
